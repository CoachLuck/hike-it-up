<table class="reviews">
  <tr>
    <th>Trail Name</th>
    <th>Rating</th>
    <th>Description</th>
    <th>Edit</th>
  </tr>
  <% @reviews.each do |r| %>
  <tr>
    <td>
      <a href="/trails/<%= r.trail.id %>"><%= r.trail.name %></a>
    </td>
    <td><%= r.rating %></td>
    <td><%= r.description %></td>
    <td>
      <a href="/reviews/<%= r.id %>/edit">Edit</a>
    </td>
  </tr>
  <% end %>
</table>