<div class="container">
    <form action="/trails" method="post">
    
    <h1>Crate a new Trail</h1>

    <section class="input">
      <label for="name">Trail Name:</label>
      <input type="text" id="name" name="trail[name]" required>
    </section>
    
    <section class="input">
      <label for="address">Address:</label>
      <input type="text" id="address" name="trail[address]" required>
    </section>
    
    <section class="input">
      <label for="hours">Hours:</label>
      <input type="text" id="hours" name="trail[hours]" required>
    </section>
    
    <section class="input">
      <label for="description">Description:</label>
      <textarea id="description" name="trail[description]"></textarea>
    </section>

    <section class="submit">
      <input type="submit" value="Create Trail">
    </section>

  </form>
</div>