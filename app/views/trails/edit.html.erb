<h1>Edit: <%= @trail.name %></h1>
<form action="/trails/<%= @trail.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <section>
    <label for="name">Trail Name:</label>
    <input type="text" id="name" name="trail[name]" value="<%= @trail.name %>">
  </section>
  <br>
  <section>
    <label for="address">Address:</label>
    <input type="text" id="address" name="trail[address]" value="<%= @trail.address %>">
  </section>
  <br>
  <section>
    <label for="hours">Hours:</label>
    <input type="text" id="hours" name="trail[hours]" value="<%= @trail.hours %>">
  </section>
  <br>
  <section>
    <label for="description">Description:</label>
    <br>
    <textarea id="description" name="trail[description]"><%= @trail.description %></textarea>
  </section>
  <br>

  <section>
    <input type="submit" value="Update Trail">
  </section>
</form>