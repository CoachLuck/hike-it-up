<nav>
  <a href="/">
    <div>Hike It Up</div>
  </a>
  <a href="/trails">
    <div>Trails</div>
  </a>
  <a href="/users" class="active">
    <div>Users</div>
  </a>
  <% if !logged_in? %>
    <a href="/login">
      <div>Login</div>
    </a>
    <a href="/signup">
      <div>Sign Up</div>
    </a>
  <% else %>
    <a href="/logout">
      <div>Log Out</div>
    </a>
  <% end %>
</nav>

<div class="container">
  <h2>All Users</h2>
  <table class="reviews">
    <tr>
      <th>Username</th>
      <th>Name</th>
      <th>Trails Visited</th>
    </tr>
    <% User.all.each do |u| %>
      <tr>
        <td>
          <a href="/users/<%=u.username %>"><%= u.username %></a>
        </td>
        <td><%= u.name %></td>
        <td><%= u.trails.size %></td>
      </tr>

    <% end %>
  </table>
</div>