<header>
  <nav>
    <ul>
      <li><a href="/users">Users</a></li>
      <li><a href="/trails">Trails</a></li>
    </ul>
  </nav>
</header>
<div class="container">
  <div class="sidebar">
    <h3>Info</h3>
    <ul>
      <li><b>Username:</b> <%= @user.username %></li>
      <li><b>Name:</b> <%= @user.name %></li>
      <li><b>Status:</b> <%= @user.status %></li>
      <% if current_user == @user %>
        <li>
          <a href="/users/<%= @user.username %>/edit">Edit Profile</a>
        </li>
      <% end %>
    </ul>
  </div>

  <section>
    <br>
    <h2>Trails Visited</h2>
    <p>
      <% @user.trails.map { |t| %>
        <a href="/trails/<%= t.id %>"><%= t.name %></a>
      <% }.join(", ") %>
    </p>
  </section>

  <section>
    <h2>Reviews</h2>
    <br>
    <table class="reviews">
      <tr>
        <th>Rating</th>
        <th>Description</th>
        <th>Trail</th>
      </tr>
      <% @reviews.each do |r| %>
        <tr>
          <td><%= r.rating %></td>
          <td><%= r.description %></td>
          <td><a href="/trails/<%= r.trail.id %>"><%= r.trail.name %></a></td>
        </tr>
      <% end %>
    </table>
  </section>
</div>


